{
  "name": "simple-react-redux-scss-hmr-livereload-boilerplate",
  "version": "1.0.0",
  "description": "Simple boilerplate app using react + scss with hmr and livereload.",
  "main": "server",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "NODE_ENV=production node server-build",
    "build": "npm run build-js && npm run build-css && npm run postbuild-css && npm run build-server",
    "build-js": "webpack",
    "build-css": "node-sass --importer node_modules/node-sass-globbing src/shared-style/app.scss public/build/app.css",
    "postbuild-css": "postcss --use autoprefixer -b 'last 2 versions' --no-map.inline public/build/app.css -o public/build/app.css",
    "watch-js": "node webpack-dev-server",
    "watch-css": "nodemon -e scss -x 'npm run build-css' && 'npm run postbuild-css'",
    "watch-server": "babel-watch server --ignore src/ --ignore public/",
    "build-server": "babel server --presets es2015 --out-dir server-build",
    "livereload-css": "livereload ./public/build/app.css",
    "postinstall": "npm run build",
    "dev": "NODE_ENV=development concurrently --kill-others 'npm run watch-js' 'npm run watch-css' 'npm run watch-server' 'npm run livereload-css'"
  },
  "author": "pswoodworth@gmail.com",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.6.0",
    "babel-core": "^6.16.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "body-parser": "^1.17.1",
    "cssnano": "^3.9.1",
    "dotenv-safe": "^4.0.4",
    "express": "^4.14.0",
    "express-handlebars": "^3.0.0",
    "express-jwt": "^5.1.0",
    "express-session": "^1.14.2",
    "get-size": "^2.0.2",
    "morgan": "^1.8.1",
    "multer": "^1.2.0",
    "node-sass": "^3.10.1",
    "node-sass-globbing": "0.0.23",
    "postcss": "^5.2.8",
    "postcss-cli": "^2.6.0",
    "query-string": "^4.2.3",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-dropzone": "^3.8.0",
    "react-fastclick": "^2.1.2",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^4.4.6",
    "react-router": "^3.0.5",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "require-directory": "^2.1.1",
    "reselect": "^2.5.4",
    "serve-favicon": "^2.3.2",
    "serve-static": "^1.11.1",
    "sharp": "^0.17.0",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-es2015": "^6.18.0",
    "babel-watch": "^2.0.5",
    "concurrently": "^3.1.0",
    "livereload": "^0.6.0",
    "nodemon": "^1.10.2",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.1"
  }
}
